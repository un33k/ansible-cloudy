# n8n Stack Environment Configuration
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme-strong-password
POSTGRES_DB=n8ndb

# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme-strong-password

# Your domain configuration
N8N_HOST=n8n.example.com
WEBHOOK_URL=https://n8n.example.com/

# Encryption key - MUST be a long random string
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-long-random-encryption-key-here

# Optional: Portainer admin email
PORTAINER_ADMIN_EMAIL=admin@example.com