# PgPool-II Client Authentication Configuration File
# ===================================================
# Generated by Ansible for {{ inventory_hostname }}

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             all                                     trust
# IPv4 local connections:
host    all             all             127.0.0.1/32            trust
host    all             all             ::1/128                 trust

# Allow connections from the local network
{% if pgpool_allowed_networks is defined %}
{% for network in pgpool_allowed_networks %}
host    all             all             {{ network }}           md5
{% endfor %}
{% endif %}

# Default: allow localhost connections
host    all             all             localhost               trust

# Reject all other connections
host    all             all             0.0.0.0/0               reject