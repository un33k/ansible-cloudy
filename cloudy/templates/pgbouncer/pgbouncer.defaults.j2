# PgBouncer defaults file
# Generated by Ansible for {{ inventory_hostname }}
# This file is sourced by the init script

# Start pgbouncer on boot
START=1

# Additional options for pgbouncer
OPTS=""

# User to run pgbouncer as
RUNASUSER="postgres"

# Configuration file location
CONFFILE="/etc/pgbouncer/pgbouncer.ini"

# Set file descriptor limit (important for high connection counts)
ulimit -n {{ pgbouncer_ulimit_n | default(4096) }}

# Set core file size limit
ulimit -c {{ pgbouncer_ulimit_c | default(0) }}